<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CalculatorButton" parent="Widget.Material3.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/calculator_button_text_size</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/button_vertical_margin</item>
        <item name="android:includeFontPadding">false</item>
        <!-- cancel out material3 -->
        <item name="backgroundTint">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- used in landscape layouts in place of CalculatorButton -->
    <style name="CalculatorButton.Small">
        <item name="android:textSize">@dimen/calculator_button_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="CalculatorButton.Function">
        <item name="android:textSize">@dimen/calculator_button_function_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/circle_ripple_only</item>
        <!-- PI breaks without this -->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/colorSecondaryContainer</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>
        <item name="colorTertiary">@color/colorTertiary</item>
